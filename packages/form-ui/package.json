{
  "name": "@truststack/form-ui",
  "version": "0.2.1",
  "description": "Trust Stack Form UI library",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "react-native": {
        "import": "./dist/esm/index.native.js",
        "require": "./dist/cjs/index.native.js"
      },
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/cjs/index.native.js"
    },
    "./react-native-web": {
      "react-native": "./dist/cjs/react-native-web.native.js",
      "types": "./types/index.d.ts",
      "import": "./dist/esm/react-native-web.mjs",
      "require": "./dist/cjs/react-native-web.cjs"
    },
    "./web": {
      "react-native": {
        "import": "./dist/esm/index.native.js",
        "require": "./dist/cjs/index.native.js"
      },
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./native": {
      "types": "./types/index.d.ts",
      "require": "./dist/native.js",
      "react-native": "./dist/native.native.js"
    },
    "./native-test": {
      "types": "./types/index.d.ts",
      "require": "./dist/test.cjs",
      "react-native": "./dist/test.native.js"
    }
  },
  "main": "dist/cjs",
  "module": "dist/esm",
  "source": "src/index.tsx",
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "tamagui-build",
    "clean": "tamagui-build clean",
    "watch": "tamagui-build --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@tamagui/lucide-icons": "1.125.32",
    "@truststack/ui": "workspace:*",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.54.2",
    "react-native": "0.74.5",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-safe-area-context": "^5.3.0",
    "tamagui": "1.125.17",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@storybook/react": "^8.6.12",
    "@tamagui/build": "1.125.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "removeSideEffects": "true",
  "tamagui": {
    "build": {
      "skipEnvToMeta": true,
      "bundle.native": "./src/index.ts",
      "bundle.native.test": "./src/index.ts"
    }
  }
}