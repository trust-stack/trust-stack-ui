{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"],
  "types": ["node", "react"],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "typeAcquisition": {
    "enable": true
  }
}
